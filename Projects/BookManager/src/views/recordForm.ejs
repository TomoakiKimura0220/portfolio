<!-- views/recordForm.ejs -->

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="theme-color" content="#7952b3">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.jsdelivr.net/npm/markdown-it/dist/markdown-it.min.js"></script>
    <script src="/client.js"></script>
</head>
<body>    
    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h3 class="fw-light">記録画面</h3>
                    <button onclick="history.back()">戻る</button>
                    <!-- 本の画像とタイトル -->
                    <div class="book-details mb-3">
                        <img class="book-img" src="<%= record.Record_Book_Image_Url %>" alt="<%= record.Record_Title %>">
                        <h5 class="card-title"><%= record.Record_Title %></h5>
                    </div>
                    <!-- Markdown形式で書き込む領域 -->
                    <div class="mb-3">
                        <label for="markdownContent"class="form-label">Markdown形式で書き込む</label>
                        <textarea class="form-control"id="markdownContent"rows="5"><%- record.Record_Content %></textarea>
                    </div>
                    <!-- Markdown形式で記述した内容を表示する領域 -->
                    <div class="mb-3">
                        <label for="displayContent" class="form-label">Markdown形式で記述した内容</label>
                        <div id="displayContent"><%- renderedContent %></div>
                    </div>
                    <!-- 更新ボタン -->
                    <button id="updateBtn" class="btn btn-primary">更新</button>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
