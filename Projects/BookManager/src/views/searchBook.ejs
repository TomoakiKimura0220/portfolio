<!-- views/searchBook.ejs -->

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="theme-color" content="#7952b3">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/style.css">
    <script src="https://cdn.jsdelivr.net/npm/markdown-it/dist/markdown-it.min.js"></script>
    <script src="/client.js"></script>
</head>
<body>
    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h3 class="fw-light">タイトルから書籍を検索</h3>
                    <a href="/bookList" class="btn btn-primary">登録済み書籍一覧画面へ</a>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">タイトル</span>
                        <input type="text" id="formText" name="myFormText" class="form-control" placeholder="書籍タイトルを入力" aria-label="books" aria-describedby="basic-addon1">
                    </div>
                    
                    <button id="btn" class="btn btn-primary my-2" type="button">検索</button>

                    <p></p>
                </div>
            </div>
        </section>
        <!-- 検索結果を表示する部分 -->
        <div id="bookItem" class="album py-5 bg-light d-flex flex-wrap justify-content-around"></div>
    </main>
</body>
</html>
